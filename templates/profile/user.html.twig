{% extends 'base.html.twig' %}

{% block title %}User {% endblock %}

{% block body %}

 <h1 class="text-center">Profile</h1>
    <table class="table">
        <tbody>

            <tr>
                <th>Username</th>
                <th>{{ user.username }}</th>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>

        </tbody>
    </table>
                <a href="{{ path('profile_edit_user', {'id': user.id}) }}">
                    <button class="btn btn-lg btn-primary" type="submit">
                        Edit
                    </button>
                </a>
{% endblock %}

