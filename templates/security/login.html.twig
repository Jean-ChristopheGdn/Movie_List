{% extends 'base.html.twig' %}

{% block title %}Amn√©sia Log in{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}


    <div class="wrapper fadeInDown">
      <div id="formContent">

        <div class="fadeIn first">
          <img src="{{ asset('build/popcorn2.png') }}" id="icon" alt="User Icon" />
        </div>

        <form>
          <input type="text" id="login" class="fadeIn second" value="{{ last_username }}" name="email" placeholder="email" required autofocus>
          <input type="text" id="password" class="fadeIn third" name="password" placeholder="password" required>
          <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
          <div class="checkbox mb-3">
              <label>
                  <input type="checkbox" name="_remember_me"> Remember me
              </label>
          </div>
          <input type="submit" class="fadeIn fourth" value="Log In">
        </form>

      </div>
    </div>

